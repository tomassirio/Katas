<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="create-answer-options-table" author="tomas.sirio">
        <createTable tableName="answer_options">
            <column name="option_id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="option_text" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="question_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="answer_options"
                                 baseColumnNames="question_id"
                                 referencedTableName="question_definitions"
                                 referencedColumnNames="id"
                                 constraintName="fk_answer_question_id"/>
    </changeSet>
</databaseChangeLog>